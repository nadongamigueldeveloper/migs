package restaurant2;
import java.util.ArrayList;
import java.util.Scanner;
public class main2 {
	public static Scanner sc = new Scanner(System.in);
	public static ArrayList<String> menu = new ArrayList<>();
	public static ArrayList<Double> price = new ArrayList<>();
	public static String choice;
	public static double totalbill = 0;
	public static int ctr = 0;
	
	public static void main(String[] args) {
		menu.add("burger");
		menu.add("vegan burger");
		menu.add("hot dog");
		menu.add("cheese dog");
		menu.add("fries");
		menu.add("cheesefries");
		menu.add("cold pressed juice");
		menu.add("cold brew");
		menu.add("water");
		menu.add("soda");
		
		price.add(9.50);
		price.add(11.00);
		price.add(5.00);
		price.add(7.00);
		price.add(5.00);
		price.add(6.00);
		price.add(7.00);
		price.add(3.00);
		price.add(2.00);
		price.add(2.00);
		
		get_cost();
		
		 System.out.println("$" + totalbill);
	
	}
	public static void get_cost() {
		
		while(true) {
			System.out.print("Enter an item: ");
			choice = sc.nextLine();
			choice.toLowerCase();
                           // WHAT IF THE USER ACCIDENTALLY PUT A SPACE AFTER WORD  burger_
			
	
			if(choice.equals("") && ctr >= 4) {
				return;
			}  // WHAT IF THE USER ENTERED "" PREMATURELY IN YOUR PROGRAM
			
			if(ctr >= 4) { // WRONG, THERE WOULD BE ONLY ONE CONDITION FOR CTR >= 4
				add_items(); // WRONG LOGIC AND CONDITION
			
			}
		
			
		}
	}
	public static void add_items() {
		 int hanap = menu.indexOf(choice);  // WRONG, MAGKAKABUG YAN. WHAT IF WALA SA MENU YUNG CHOICE? MAG NENEGA YUNG INDEX na masstore sa HANAP
		 double search = price.get(hanap); // WRONG KASI WRONG DIN YUNG PREV LINE
		
				 if(menu.contains(choice)) { // WALA KANG CINDITION NA ILALAGAY SA LOOB NG METHOD NATO
					 ctr++;             // HINDI KA RITO MAGIINCREMENT
				    totalbill = totalbill + search;
					return; // UNNECESSARY USE OF RETURN
					
				 }
				 
	
	}

}
